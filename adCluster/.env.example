# ADOCluster Frontend Environment Configuration
# Copy this file to .env and modify the values as needed

# Server Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=ADOCluster
VITE_DEV_SERVER_PORT=5173

# Authentication Endpoints
VITE_LOGIN_ENDPOINT=/auth/login
VITE_SIGNUP_ENDPOINT=/auth/register
VITE_GOOGLE_LOGIN_ENDPOINT=/auth/google

# API Endpoints
VITE_GOOGLE_SCHOLAR_ENDPOINT=/api/google-scholar
VITE_RESOURCES_ENDPOINT=/api/resources
VITE_PROJECTS_ENDPOINT=/api/projects
VITE_USERS_ENDPOINT=/users
VITE_CLIENT_IP_ENDPOINT=/api/client-ip/record

# WebSocket Configuration
VITE_WS_BASE_URL=ws://localhost:8000

# Editor Settings
VITE_AUTO_SAVE_INTERVAL=30000
VITE_AUTO_SAVE_ENABLED=true

# External Resources
VITE_FONT_AWESOME_URL=https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css

# JWT Secret Key (change in production)
SECRET_KEY=your-secret-key-here

# Production Configuration Example
# VITE_API_BASE_URL=https://your-production-api.com
# VITE_WS_BASE_URL=wss://your-production-api.com
# SECRET_KEY=your-production-secret-key